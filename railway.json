{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build:core && npm run build:file-exchange && cd packages/api && npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "cd packages/api && npm run start:prod",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
