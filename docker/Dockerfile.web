FROM node:20-alpine AS builder

WORKDIR /app

# Build arguments for white-label customization
ARG NEXT_PUBLIC_BRAND_NAME="RCM Partner"
ARG NEXT_PUBLIC_PRIMARY_COLOR="#2563eb"
ARG NEXT_PUBLIC_SUPPORT_EMAIL=""
ARG NEXT_PUBLIC_API_URL

# Set as env vars for Next.js build
ENV NEXT_PUBLIC_BRAND_NAME=${NEXT_PUBLIC_BRAND_NAME}
ENV NEXT_PUBLIC_PRIMARY_COLOR=${NEXT_PUBLIC_PRIMARY_COLOR}
ENV NEXT_PUBLIC_SUPPORT_EMAIL=${NEXT_PUBLIC_SUPPORT_EMAIL}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

# Copy and install
COPY package*.json ./
COPY packages/web/package*.json ./packages/web/
COPY packages/core/package*.json ./packages/core/

RUN npm ci --workspace=@halcyon-rcm/web --workspace=@halcyon-rcm/core

COPY packages/web ./packages/web
COPY packages/core ./packages/core

RUN npm run build --workspace=@halcyon-rcm/core
RUN npm run build --workspace=@halcyon-rcm/web

# Production
FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app/packages/web/.next/standalone ./
COPY --from=builder /app/packages/web/.next/static ./packages/web/.next/static
COPY --from=builder /app/packages/web/public ./packages/web/public

ENV NODE_ENV=production

EXPOSE 3000

CMD ["node", "packages/web/server.js"]
