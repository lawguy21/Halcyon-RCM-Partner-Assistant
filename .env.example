# Database
DATABASE_URL="postgresql://user:password@localhost:5432/halcyon_rcm?schema=public"

# For Railway deployment
# DATABASE_URL will be automatically set by Railway

# Redis (optional, for caching/queues)
REDIS_URL="redis://localhost:6379"

# API
PORT=3001
NODE_ENV=development

# Web Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Auth (for NextAuth - next step)
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Optional: Sentry for error tracking
# SENTRY_DSN=""

# ============================================================================
# Mugetsu SSI Eligibility Engine Integration
# ============================================================================
# URL for the Halcyon-Mugetsu SSI eligibility determination API
MUGETSU_API_URL=http://localhost:3001/api

# API key for authenticating with Mugetsu service
MUGETSU_API_KEY=your-api-key-here

# Optional: Request timeout in milliseconds (default: 30000)
# MUGETSU_TIMEOUT=30000

# Optional: Maximum retry attempts (default: 3)
# MUGETSU_MAX_RETRIES=3

# Optional: Retry delay in milliseconds (default: 1000)
# MUGETSU_RETRY_DELAY=1000

