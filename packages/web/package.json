{
  "name": "@halcyon-rcm/web",
  "version": "1.0.0",
  "description": "Next.js frontend for Halcyon RCM Partner Assistant",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rimraf .next out",
    "build:capacitor": "node scripts/build-capacitor.js",
    "build:mobile": "node scripts/build-mobile.js",
    "build:android": "MOBILE_APP_ID=${npm_config_app_id} npm run build && npx cap sync android",
    "build:ios": "MOBILE_APP_ID=${npm_config_app_id} npm run build && npx cap sync ios",
    "cap:init": "cap init \"Halcyon RCM\" com.halcyon.rcm --web-dir out",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "ios:build": "npm run build:capacitor && npm run cap:sync",
    "ios:open": "npm run ios:build && npm run cap:open:ios",
    "android:build": "npm run build:capacitor && npm run cap:sync",
    "android:open": "npm run android:build && npm run cap:open:android"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@halcyon-rcm/core": "*",
    "bcryptjs": "^3.0.3",
    "next": "^14.0.4",
    "next-auth": "^4.24.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/android": "^8.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Halcyon",
  "license": "UNLICENSED"
}
